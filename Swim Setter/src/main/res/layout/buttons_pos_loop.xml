<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="style=?android:attr/buttonBarStyle"
    android:id="@+id/workout_buttons">

    <Button
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:gravity="center"
        android:onClick="cancelLoop"
        android:text="@string/cancel"/>

    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:clickable="false"
        android:textColor="@color/hidden"
        android:layout_height="wrap_content"
        android:id="@+id/create_loop"
        android:text="@string/create_loop"
        android:onClick="createLoop"/>



</LinearLayout>